#!/usr/bin/env zsh
#
#
set -u -e -o pipefail

case "$*" in
  # doc: CMD -h|--help|help -- Show this message.
  "-h"|"--help"|"help")
    CMD="$0" da_doc "$0"
    echo
    ;;

  # doc: CMD caddy install
  "caddy install")
    set -x
    mkdir -p /progs/caddy
    cd /progs/caddy
    wget --continue "https://caddyserver.com/api/download?os=linux&arch=amd64&idempotency=26530707146755"
  ;;
  *)
    echo "!!! Unknown command: $*" >&2
    exit 1
    ;;
esac

